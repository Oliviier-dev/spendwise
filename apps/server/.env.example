# ───── DATABASE ────────────────────────────────────────────────

# Primary PostgreSQL connection string for Drizzle ORM
DATABASE_URL=

# Optional: Connection string for PgBouncer (if used for pooling)
DATABASE_URL_POOLER=

# ───── AUTHENTICATION ──────────────────────────────────────────

# Secret key used by Better Auth to sign sessions
BETTER_AUTH_SECRET=

# URL where Better Auth is hosted (usually API base URL)
BETTER_AUTH_URL=

# ───── FRONTEND / CLIENT ───────────────────────────────────────

# Allowed frontend origin for CORS (e.g., https://yourdomain.com)
CORS_ORIGIN=

# Public URL of the frontend app (used in redirects, etc.)
NEXT_PUBLIC_CLIENT_URL=

# ───── GOOGLE OAUTH (SOCIAL LOGIN) ─────────────────────────────

# Google OAuth client ID for signing in with Google
GOOGLE_CLIENT_ID=

# Google OAuth client secret
GOOGLE_CLIENT_SECRET=
